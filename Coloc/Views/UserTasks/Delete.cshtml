@model Coloc.Models.UserTasks

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (User.IsInRole("Admin"))
{
    <h2>Suppression</h2>

<h3>Êtes-vous sûr de vouloir supprimer cet élément ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.BeginTask)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BeginTask)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EndTask)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EndTask)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd>
            @UserTasks.stateToString(Model.State)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Task)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Task.Description)
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserId"/>
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        <a asp-controller="AspNetUsers" asp-action="Details" asp-route-id="@Model.UserId" style="float:right;" class="btn btn-warning">Retour aux tâches</a>
    </form>
</div>
}
else
{
    <h1 style="color: red;">Vous n'avez pas accès à cette page</h1>
}